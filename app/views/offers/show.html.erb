<div class= "container">
  <div class= "card-show">
     <%= image_tag @offer.company.logo_url, alt: "Logo de l'entreprise", class: "card-logo" %>
        <div class="coeur-fav-profil">
           <% if current_user.already_in_list?(@offer) %>
             <%= link_to wishlist_path(current_user.get_wishlist(@offer)), method: :delete, remote: true do %>
                <i class="fas fa-heart"></i>
           <% end %>
           <% else %>
             <%= link_to offer_wishlists_path(@offer), method: :post, remote: true do %>
                <i class="far fa-heart"></i>
             <% end %>
           <% end %>
         </div>

    <p><%= @offer.name %></p>
    <p><%= @offer.company.name %></p>
    <p><%= @offer.contract %></p>
    <p><%= @offer.income %></p>
    <p><%= @offer.description %></p>

  </div>
  <%= link_to "Revenir Ã  la liste d'offres", offers_path %>
</div>
