<div class= "container">

  <div class= "card-show">
    <p><%= @offer.name %></p>
    <p class="card-fav">
       <!-- méthode create et delete sur l'icône coeur
        si l'user clique sur le coeur vide, le coeur devient rose et offre ajoutée à sa wishlist
        l'user reste sur l'index/page d'accueil (ajax)
        sinon l'user clique sur coeur rose, l'offre est supprimée et l'user reste sur la même page -->
       <% if link_to current_user.wishlist?(@offer) %>
            <% do current_user.wishlist?(@offer) %>
       <% else offer_wishlists_path(@offer), %>
              <% if method: current_user.wishlist?(@offer)%>
                   <% :delete  %>
              <% else :create, remote: true do %>
                  <% if current_user.wishlist?(@offer) %>
                    <i class="card-fav" </i>

      <% link_to offer_wishlists_path(@offer), method: :post do %>
          <%= image_tag "coeur_fav.png", alt: "coeur rose" %>
      <%end%>
</p>
    <p class="card-fav"> <%= link_to "FAV", offer_wishlists_path(@offer), method: :create %></p>
    <p><%= @offer.company.name %></p>
    <p><%= @offer.contract %></p>
    <p><%= @offer.income %></p>
    <p><%= @offer.description %></p>
  </div>



</div>
